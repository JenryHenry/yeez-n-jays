<main class="container mt-4">
    <h1 class="mb-2">New Yeez-n-Jays'er</h1>
    <form id="signup-form" class="yeeznjays-signup-form">
        <div class="mb-3">
            <label for="username" class="form-label">Yeez-n-Jays'er Name:</label>
            <input type="text" class="form-control" id="username" placeholder="User Name"/>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Yeez-n-Jays'er Email:</label>
            <input type="email" class="form-control" id="email" placeholder="User Email"/>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Yeez-n-Jays'er Password:</label>
            <input type="password" class="form-control" id="password" placeholder="User Password Cannot Exceed 8 Characters"/>
        </div>
        <button type="submit" class="btn btn-warning">New Yeez-n-Jays'er Sign Up</button>
    </form>
</main>