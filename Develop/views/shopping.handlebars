<main class='card-container'>
  <h1 class="text-center">My FAVs</h1>
  <div class="row justify-content-center">
    {{#each shoes as |shoe|}}
      <div class='card col-md-3 m-3'>
        <div class='card-header'>
          <img src={{shoe.image_uri}} alt="Placeholder">
          <h2>{{shoe.product_name}}</h2>
          <h3>${{shoe.price}}</h3>
          <button class="btn btn-outline-primary like-button">FAV</button>
        </div>
      </div>
    {{/each}}
  </div>
</main>